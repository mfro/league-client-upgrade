{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        "outDir": "temp",

        "baseUrl": ".",
        
        "paths": {
            "zhonya": ["src/main"],
            "logging": ["src/logging"],
            "utility/*": ["src/utility/*"],
            "plugins/*": ["src/plugins/*"]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts"
    ]
}